#include <delay.h>
#include <mega32.h>

void main(void) {
    int count = 0;
    unsigned char d,y,s,h;
    DDRB = 0xFF;
    DDRA = 0xFF;
    while (1) {

        h = count / 1000;
        s = (count%1000)/100;
        d = (count%100)/10;

        PORTA = (d << 4) | y;
        PORTA = (d << 4) | y;

        delay_ms(10);

        count++;
        if (count > 9999) {
            count = 0;
        }
    }
}